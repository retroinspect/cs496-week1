<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="todoViewModel"
            type="com.example.sample.ui.todo.TodoViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.todo.TodoFragment">

        <TextView
            android:id="@+id/title_todo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_horizontal"
            android:text="@string/title_todo"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.208" />


        <EditText
            android:id="@+id/create_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="@string/auto_fill_hint"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/create_todo_hint"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_todo" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/todo_list"
            android:name="todo_list"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/create_todo"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>